<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true"><shape>
            <corners android:bottomLeftRadius="15dp" android:bottomRightRadius="15dp" android:topLeftRadius="15dp" android:topRightRadius="15dp" />

            <stroke android:width="2dp" android:color="#fcb758" />

            <padding android:bottom="6dp" android:left="10dp" android:right="10dp" android:top="6dp" />

            <solid android:color="#00000000" />
        </shape></item>
    <item android:state_focused="false"><shape>
            <corners android:bottomLeftRadius="15dp" android:bottomRightRadius="15dp" android:topLeftRadius="15dp" android:topRightRadius="15dp" />

            <stroke android:width="2dp" android:color="#b9b9b9" />

            <padding android:bottom="6dp" android:left="10dp" android:right="10dp" android:top="6dp" />

            <solid android:color="#00000000" />
        </shape></item>

</selector>
