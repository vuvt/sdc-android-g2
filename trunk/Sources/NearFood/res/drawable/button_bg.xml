<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#b8143b" />

            <stroke android:width="1dp" android:color="#FFFFFF" />

            <corners android:radius="3dp" />

            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="#df0024" android:startColor="#ef043b" />

            <stroke android:width="1dp" android:color="#df0024" />

            <corners android:radius="3dp" />

            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />
        </shape></item>

</selector>