<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true"><shape>
            <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp" android:topLeftRadius="8dp" android:topRightRadius="8dp" />

            <stroke android:width="2dp" android:color="#fcb758" />

            <padding android:bottom="6dp" android:left="20dp" android:right="20dp" android:top="6dp" />

            <solid android:color="#FFFFFF" />
        </shape></item>
    <item android:state_focused="false"><shape>
            <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp" android:topLeftRadius="8dp" android:topRightRadius="8dp" />

            <stroke android:width="2dp" android:color="#b9b9b9" />

            <padding android:bottom="6dp" android:left="20dp" android:right="20dp" android:top="6dp" />

            <solid android:color="#FFFFFF" />
        </shape></item>

</selector>