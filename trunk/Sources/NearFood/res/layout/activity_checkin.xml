<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout style="@style/TitleBar" >

        <ImageView
            style="@style/TitleBarLogo"
            android:contentDescription="@string/app_name"
            android:src="@drawable/titlebar_logo" />

        <ImageView
            style="@style/TitleBarSeparator"
            android:contentDescription="@string/app_name" />

        <TextView
            style="@style/TitleBarText"
            android:text="@string/activity_checkin_title" />

        <Button
            android:id="@+id/bt_checkin"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="@dimen/body_layout_margin"
            android:layout_marginRight="@dimen/body_layout_margin"
            android:background="@drawable/button_opacity_20dp"
            android:enabled="false"
            android:onClick="checkIn"
            android:visibility="invisible"
            android:text="@string/activity_checkin_title" />
        
    </LinearLayout>

    <RelativeLayout style="@style/Body" >

        <FrameLayout
            android:id="@+id/frame_search"
            style="@style/BodyRow"
            android:layout_height="30dp"
            android:foregroundGravity="right" >

            <EditText
                android:id="@+id/edt_search"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:background="@drawable/frame_search_background"
                android:focusableInTouchMode="false"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:paddingLeft="20dp"
                android:paddingRight="45dp"
                android:singleLine="true" >
            </EditText>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp" >

                <ImageView
                    style="@style/TitleBarSeparator"
                    android:layout_gravity="right|center_vertical"
                    android:layout_margin="2dp"
                    android:contentDescription="@string/app_name" />

                <Button
                    android:id="@+id/bt_search"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/ic_search"
                    android:onClick="actionSearch" />
            </LinearLayout>
        </FrameLayout>

        <com.google.android.maps.MapView
            android:id="@+id/mapView"
            style="@style/BodyRow"
            android:layout_height="200dp"
            android:layout_below="@+id/frame_search"
            android:apiKey="0l4sCTTyRmXTNo7k8DREHvEaLar2UmHGwnhZVHQ"
            android:clickable="true"
            android:enabled="true" />

        <ListView
            android:id="@+id/list"
            style="@style/BodyRow"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/mapView"
            android:layout_marginBottom="5dp"
            android:choiceMode="singleChoice"
            android:splitMotionEvents="true"/>

    </RelativeLayout>

</RelativeLayout>