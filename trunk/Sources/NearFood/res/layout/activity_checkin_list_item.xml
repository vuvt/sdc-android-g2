<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_mapview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="@dimen/body_layout_margin"
        android:layout_marginRight="@dimen/body_layout_margin"
        android:contentDescription="@string/activity_checkin_title"
        android:scaleType="fitStart"
        android:layout_margin="5dp"
        android:src="@drawable/ic_map_nocolor"/>

	 <ImageView
        style="@style/TitleBarSeparator"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:contentDescription="@string/activity_checkin_title" />

    <TextView
        android:id="@+id/place_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:layout_marginLeft="@dimen/body_layout_margin"
        android:layout_marginRight="@dimen/body_layout_margin"
        android:layout_weight="1"
        android:textSize="18sp"
        android:text="Location" />

</LinearLayout>
