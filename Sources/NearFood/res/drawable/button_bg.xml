<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#00FFFF" />

            <stroke android:width="1dp" android:color="#00FFFF" />

            <corners android:radius="5dp" />

            <padding android:bottom="2dp" android:left="10dp" android:right="10dp" android:top="2dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="#B0E0E6" android:startColor="#40E0D0" />

            <stroke android:width="1dp" android:color="#00FFFF" />

            <corners android:radius="5dp" />

            <padding android:bottom="2dp" android:left="10dp" android:right="10dp" android:top="2dp" />
        </shape></item>

</selector>