<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/Body"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imgFacebook"
                android:layout_width="100dip"
                android:layout_height="120dip" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dip" >

                <TextView
                    android:id="@+id/namePlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quan nhau choa"
                    android:textColor="#4169E1"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:layout_marginLeft="10dp"
                    android:text="http://www.ranhroisinhnongnoi.net"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:background="@drawable/bg_message"
                android:padding="20dip"
                android:text="Món ăn cực kỳ rẻ tiền và dễ làm nhưng lại có thể làm vừa lòng cả người lớn lẫn trẻ con. Su su xào trứng đủ dinh dưỡng để bạn bổ sung..."
                android:minHeight="150dp"
                android:textSize="13sp" />
			
            <ProgressBar
                android:id="@+id/dialogProgressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="gone" />
            
            <EditText
                android:id="@+id/contentShare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:ems="10"
                android:gravity="top|left"
                android:hint="Content need share"
                android:inputType="textMultiLine"
                android:lines="2"
                android:padding="5dip"
                android:textSize="13sp"
                android:visibility="gone" >
            </EditText>

            <TextView
                android:id="@+id/noteShare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:ems="10"
                android:gravity="top|left"
                android:padding="5dip"
                android:text="Error connect... "
                android:textColor="#FF0000"
                android:textSize="13sp"
                android:visibility="gone" >
            </TextView>

            <Button
                android:id="@+id/btnShareOnFacebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="20dip"
                android:gravity="center"
                android:text="Share On Facebook"
                android:textSize="20dip" />

            <Button
                android:id="@+id/btnShare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="Share"
                android:textSize="20dip"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="Cancel"
                android:textSize="20dip" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>