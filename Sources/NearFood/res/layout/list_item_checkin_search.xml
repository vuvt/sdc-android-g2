<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dip" >

        <ImageView
            android:id="@id/img_item_Search"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dip"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:id="@id/content_item_Search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@id/fullname_item_checkin_search"
                style="@style/FullName_CheckIn_Text"
                android:text="Fullname" />

            <TextView
                android:id="@id/description_item_checkin_search"
                style="@style/Description_Time_CheckIn_Text"
                android:layout_marginLeft="10dip"
                android:text="decription" />

            <TextView
                android:id="@id/time_item_checkin_search"
                style="@style/Description_Time_CheckIn_Text"
                android:layout_marginLeft="25dip"
                android:layout_marginTop="5dip"
                android:text="About 2h ago"
                android:textColor="#FF0000" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dip"
        android:background="@color/titlebar_separator" />

</LinearLayout>