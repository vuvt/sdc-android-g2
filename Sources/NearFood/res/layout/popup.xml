<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_message1"
    android:padding="15dip" >

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" 
        android:orientation="vertical">

        <TextView
            android:id="@+id/popupName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quan nhau Pipo "
            android:typeface="sans"
            android:textStyle="bold"
            android:textColor="#4169E1"
            android:textSize="24sp" >
        </TextView>
        <TextView
            android:id="@+id/popupAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dip"
            android:text="Quna ay ngon thiet. Moi nguoi vo an de cho biet."
            android:textColor="#ff000000"
            android:textSize="18sp" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center" >

        <Button
            android:id="@+id/btnPopupView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View"
            android:textSize="18sp"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:textStyle="bold|normal"
            android:layout_marginRight="20dip">
        </Button>
        
        <Button
            android:id="@+id/btnPopupCancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="18sp"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:textStyle="bold|normal">
        </Button>
    </LinearLayout>

</RelativeLayout>